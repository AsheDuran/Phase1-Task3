  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <% if @user.errors.any? %>
          <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <%= form_with model: @user , url: user_path(@user.id), method: :patch do |f| %>
          <div class="form-group">
            <div><label for="user_name">Name</label></div>
            <div><%= f.text_field :name, autofocus: true, id:"user_name", placeholder:"名前" ,class: "form-control"%></div>
          </div>
          <div class="form-group">
            <div><label for="user_image">Image</label></div>
            <div><%= f.file_field :profile_image, accept: "image/*"%></div>
          </div>
          <div class="form-group">
            <div><label for="inputIntroduction">Introduction</label></div>
            <%= f.text_area :introduction ,class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.submit "Update User",class: "btn btn-secondary"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>

